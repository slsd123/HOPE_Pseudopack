     Library_Flag  = 

        Info_Flag  = 

ifeq ($(strip $(DEBUG)),on)
  Optimization_Flag  =
endif

         Debug_Flag  = -g -C -u
         Debug_Flag += -qattr=full -qxref=full -qlist -qsource 
         Debug_Flag += -qlist -qsource
         Debug_Flag += -bloadmap:loadmap 
#        Debug_Flag += -v

       Profile_Flag  = -p 
