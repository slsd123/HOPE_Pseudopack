#=========================================================================
#               ---- ESSL Library ----

ifeq ($(strip $(USE_ESSL_LIBRARY)),on)
 ESSL_LIBRARY = -lesslsmp -lpesslsmp -lblacssmp
#ESSL_LIBRARY = -lessl_r -lesslp2 -lpesslp2 -lblacsp2

 ifeq ($(strip $(ESSL_OPTIMIZATION)),on)
  ESSL_OPTION  = -qessl
 endif
endif

LIBRARY += $(ESSL_LIBRARY)

